@model TooGoodToGoAvans.Domain.Models.Package

@{
    ViewData["Title"] = "Delete Package";
}

<h1>Delete Package</h1>

<div>
    <h4>Are you sure you want to delete this package?</h4>
    <div>
        <strong>Name:</strong> @Model.Name
    </div>
    <div>
        <strong>Price:</strong> @Model.Price
    </div>
    <div>
        <strong>Pickup Date:</strong> @Model.DateAndTimePickup.ToString("g")
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PackageId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
