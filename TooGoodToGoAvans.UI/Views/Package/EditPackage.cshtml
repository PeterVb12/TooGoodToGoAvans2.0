@model TooGoodToGoAvans.UI.Models.PackageViewModel
@{
    Layout = "_Layout";
}
<style>
    body {
        background-color: #E8F5E9;
    }
</style>

<div class="container mt-4">

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <img src="~/AvansToGo_logo.png" alt="Avans To Go Logo" class="me-3" style="max-height: 50px;">
                        <h2 class="card-title text-dark">Bewerk een Pakket</h2>
                    </div>
                    <form asp-action="EditPackage" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="PackageId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateAndTimePickup" class="form-label"></label>
                            <input asp-for="DateAndTimePickup" type="datetime-local" class="form-control" required />
                            <span asp-validation-for="DateAndTimePickup" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateAndTimeLastPickup" class="form-label"></label>
                            <input asp-for="DateAndTimeLastPickup" type="datetime-local" class="form-control" required />
                            <span asp-validation-for="DateAndTimeLastPickup" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MealType" class="form-label"></label>
                            <input asp-for="MealType" class="form-control" required />
                            <span asp-validation-for="MealType" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" asp-for="AgeRestricted" class="form-check-input" />
                            <label class="form-check-label" for="AgeRestricted">Ja, het pakket is 18+</label>
                            <span asp-validation-for="AgeRestricted" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Selecteer Producten:</label>
                            <div class="row row-cols-1 row-cols-md-2 g-3">
                                @foreach (var product in Model.Products)
                                {
                                    <div class="col">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-body">
                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" asp-for="@product.Selected" value="@product.Id" />
                                                    <label class="form-check-label">@product.Name</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="Products" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Pakket Bijwerken</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
