@using TooGoodToGoAvans.Domain.Models
@model TooGoodToGoAvans.UI.Models.RegisterViewModel

<div>
    <form class="m-2" asp-action="Register" method="post">
        <div asp-validation-summary="All">
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress"></label>
            <div><span asp-validation-for="EmailAddress" class="text-danger"></span></div>
            <input asp-for="EmailAddress" class="form-control" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="PasswordConfirmation"></label>
            <input class="form-control" asp-for="PasswordConfirmation" />
        </div>
        @* <div class="form-group">
        <label class="form-label" asp-for="Role"></label>
        <input class="form-control" asp-for="Role" />
        </div> *@
        <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()"
                class="form-control"></select>
        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</div>